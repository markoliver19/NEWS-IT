<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:paddingLeft="0dp"
		android:gravity="center_horizontal"
		android:background="#5F4920">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="250sp"
				android:background="#FDFDFD">

				<ImageView
					android:id="@+id/imageView"
					android:layout_width="150dp"
					android:layout_height="150dp"
					android:contentDescription="@string/app_name"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="10dp"
					android:background="@drawable/logo"/>

				<TextView
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:text="News IT"
					android:layout_below="@id/imageView"
					android:textStyle="bold"
					android:textColor="#130604"
					android:textSize="17sp"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:layout_marginTop="3dp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/rl"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
				android:layout_marginTop="220sp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:text="C188-C189"
					android:textSize="20sp"
					android:gravity="center"
					android:textColor="#342808"
					android:textStyle="bold"
					android:layout_marginTop="15dp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/rl2"
				android:layout_below="@+id/rl"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
				android:layout_marginTop="30dp"
				android:gravity="center"
				android:background="@drawable/input">

				<TextView
					android:layout_marginTop="15dp"
					android:id="@+id/tv1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="DEVELOPER"
					android:textColor="#000000"
					android:textStyle="bold"
					android:layout_marginStart="15dp"
					android:textSize="20sp"/>

				<TextView
					android:id="@+id/tv2"
					android:layout_marginTop="25dp"
					android:layout_below="@id/tv1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Mark Oliver Dulay"
					android:textColor="#130604"
					android:textStyle="bold"
					android:layout_marginStart="25dp"/>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_below="@id/tv2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Joy Malqued"
					android:textColor="#130604"
					android:textStyle="bold"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="25dp"/>

				<TextView
					android:layout_marginTop="40dp"
					android:layout_below="@id/tv2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Mark Dumlao"
					android:textColor="#130604"
					android:textStyle="bold"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="25dp"/>

			</RelativeLayout>

		</RelativeLayout>

	</RelativeLayout>

</ScrollView>

